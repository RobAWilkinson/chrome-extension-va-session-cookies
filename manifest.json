{
  "name": "Copy VA.gov session cookies",
  "version": "1.0.0",
  "description": "Copies the api and vagov session cookies so you can easily paste them into a REST client header named `Cookie`",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "cookies",
    "declarativeContent",
    "*://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/va-copy-cookies-16.png",
      "32": "images/va-copy-cookies-32.png",
      "48": "images/va-copy-cookies-48.png",
      "128": "images/va-copy-cookies-128.png"
    },
    "default_title": "Copy VA.gov session cookies",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/va-copy-cookies-16.png",
    "32": "images/va-copy-cookies-32.png",
    "48": "images/va-copy-cookies-48.png",
    "128": "images/va-copy-cookies-128.png"
  },
  "manifest_version": 2
}
